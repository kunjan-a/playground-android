<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginLeft="5dp"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Connect to:"
            />
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spEndpoints"
            android:prompt="@string/endpoint_prompt"
            android:entries="@array/endpoint_arrays"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timeout (sec)"
                />
        <EditText
                android:id="@+id/etTimeout"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSL/TLS"
                android:layout_marginLeft="20dp"
                />
        <CheckBox
                android:id="@+id/cbSecure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invalidate"
                android:layout_marginLeft="20dp"
                />
        <CheckBox
                android:id="@+id/cbInvalidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="isDoorProtocol"
                android:layout_marginLeft="20dp"
        />
        <CheckBox
                android:id="@+id/cbDoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
    </LinearLayout>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Proxy:"
            android:visibility="gone"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spProxy"
                android:prompt="@string/proxy_prompt"
                android:entries="@array/proxy_arrays"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host"
                android:layout_marginLeft="20dp"
                android:textIsSelectable="true"
                />
        <EditText
                android:id="@+id/etProxyHost"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Port"
                android:layout_marginLeft="20dp"
                />
        <EditText
                android:id="@+id/etProxyPort"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                />
    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
                android:id="@+id/etPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="Port"
                android:inputType="number"
                />
        <EditText
                android:id="@+id/etHost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Host"
                android:layout_toLeftOf="@id/etPort"
                />
    </RelativeLayout>

    <EditText
            android:id="@+id/etRequest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Request to be sent on connection"
            />

    <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
        <requestFocus/>
    </Button>

    <Button
            android:id="@+id/btnForward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forward Result"/>
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">

        <TextView
                android:id="@+id/etResult"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textIsSelectable="true"
                />
    </ScrollView>
</LinearLayout>

